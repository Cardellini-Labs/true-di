{
  "name": "true-di",
  "version": "3.0.0",
  "description": "Zero Dependency, Minimalistic **Type-Safe DI Container** for TypeScript and JavaScript projects",
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/esm/index.d.ts",
      "require": "./dist/cjs/index.js",
      "import": "./dist/esm/index.js"
    }
  },
  "typesVersions": {
    "*": {
      "*": [
        "./dist/esm/*"
      ]
    }
  },
  "scripts": {
    "test": "jest",
    "coveralls": "./.coveralls.sh",
    "lint": "eslint src",
    "clear": "rm -rf ./lib; rm -rf ./esm",
    "compile": "tsc -b ./tsconfig.cjs.json ./tsconfig.esm.json && echo '{ \"type\": \"module\" }' > dist/esm/package.json && tsup",
    "build": "npm run clear; npm run compile"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DScheglov/true-di.git"
  },
  "keywords": [
    "Dependency",
    "Injection",
    "Inject",
    "Dependency",
    "di",
    "container",
    "service",
    "instance"
  ],
  "author": "Dmitry Scheglov <dmitry.scheglov@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/DScheglov/true-di/issues"
  },
  "homepage": "https://github.com/DScheglov/true-di#readme",
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@type-challenges/utils": "^0.1.1",
    "@types/eslint": "^9.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.2.0",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.3.0",
    "jest": "^30.0.5",
    "jiti": "^2.5.1",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.1",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.39.0"
  }
}
